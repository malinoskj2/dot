#!/usr/local/bin/bash
EDITOR=vim;  export EDITOR
PAGER=less;   export PAGER
BROWSER=firefox; export BROWSER

LANG=en_US.UTF-8;   export LANG
CHARSET=UTF-8;  export CHARSET

# PGP
GPG_TTY=$(tty); export GPG_TTY

# Locations
SCRIPT_DIR=/usr/home/jesse/env/Scripts/bin; export SCRIPT_DIR #Sym links
XDG_CONFIG_HOME=/usr/home/jesse/.config; export XDG_CONFIG_HOME
XCLIP_PATH=/usr/local/bin/xclip; export XCLIP_PATH

# jdk
if [ $(uname) = "FreeBSD" ]; then
JAVA_HOME=/usr/local/openjdk8; export JAVA_HOME
elif [ $(uname) = "Linux" ]; then
JAVA_HOME='/usr/lib/jvm/java-1.8.0-openjdk-amd64'; export JAVA_HOME
fi

# Compilation
CC=clang; export CC
CXX=clang++; export CXX

CMAKE_C_COMPILER=clang; export CMAKE_C_COMPILER
CMAKE_CXX_COMPILER=clang++; export CMAKE_CXX_COMPILER

# app cfg
ENHANCED_FILTER=fzf; export ENHANCED_FILTER
FZF_DEFAULT_COMMAND='rg --files --follow'; export FZF_DEFAULT_COMMAND
FZF_DEFAULT_OPTS='--height 40% --layout=reverse --prompt="â€£ "  --border --preview "bat {}"'; export FZF_DEFAULT_OPTS
