#!/usr/local/bin/bash
EDITOR=vim;  export EDITOR
PAGER='less -R';   export PAGER
BROWSER=firefox; export BROWSER
TERMINAL=alacritty; export TERMINAL

LANG=en_US.UTF-8;   export LANG
LC_TIME=en_US.UTF-8; export LC_TIME
CHARSET=UTF-8;  export CHARSET

# PGP
GPG_TTY=$(tty); export GPG_TTY

# Locations
SCRIPT_DIR=/usr/home/jesse/env/script/bin; export SCRIPT_DIR #Sym links
XDG_CONFIG_HOME=/usr/home/jesse/.config; export XDG_CONFIG_HOME
XCLIP_PATH=/usr/local/bin/xclip; export XCLIP_PATH

if [ "$(hostname)" = 'home' ]; then
  SS_DIR=/disk/work/screenshot; export SS_DIR;
elif [ "$(hostname)" = 'katana' ]; then
  SS_DIR=/tmp/screenshot; export SS_DIR;
fi

# jdk
if [ $(uname) = "FreeBSD" ]; then
JAVA_HOME=/usr/local/openjdk8; export JAVA_HOME
elif [ $(uname) = "Linux" ]; then
JAVA_HOME='/usr/lib/jvm/java-1.8.0-openjdk-amd64'; export JAVA_HOME
fi

# Compilation
CC=clang; export CC
CXX=clang++; export CXX

CMAKE_C_COMPILER=clang; export CMAKE_C_COMPILER
CMAKE_CXX_COMPILER=clang++; export CMAKE_CXX_COMPILER

# docker
export DOCKER_TLS_VERIFY="1"
export DOCKER_HOST="tcp://192.168.99.100:2376"
export DOCKER_CERT_PATH="/home/jesse/.docker/machine/machines/docker1"
export DOCKER_MACHINE_NAME="docker1"

# node
export NODE_PATH="/home/jesse/.npm/global/lib/node_modules"; export NODE_PATH

# java
export _JAVA_AWT_WM_NONREPARENTING=1
# export _JAVA_OPTIONS='-Dawt.useSystemAAFontSettings=on -Dswing.aatext=true -Dswing.defaultlaf=com.sun.java.swing.plaf.gtk.GTKLookAndFeel -DactionSystem.xWindow.remove.focus.from.nonFocusable.popups=false -Dsun.java2d.opengl=true'

# app cfg
# exa
LS_COLORS="di=34:ex=35"; export LS_COLORS

# zsh-z
ZSHZ_CMD=j; export ZSHZ_CMD
LIBGIT2_SYS_USE_PKG_CONFIG=1; export LIBGIT2_SYS_USE_PKG_CONFIG 
