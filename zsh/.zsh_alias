#!/usr/local/bin/bash

alias ls='ls -F'
alias ll='ls -lh'
alias llr='ls -lhtr' #Sort by mod fate, show last modified at bottom

# Info
alias iomon='top -m io -o total'
alias df='df -H'
alias drives='camcontrol devlist'

alias sys='acpiconf -i 0 | grep -i -e "Remaining capacity" -e "Remaining time" && sysctl hw.acpi.thermal.tz0.temperature'

# Git
alias gpom='git push origin master'

# Misc
alias cls='clear'

# Overrides
alias rgi='rg -i'
alias cat='bat'

alias orig_cp='cp'
alias cp='xcp'

alias curlp='curl_json_pretty'

# cargo 
alias cargotestbt='RUST_BACKTRACE=1 cargo test -- --nocapture'
alias cargorunbt='RUST_BACKTRACE=1 cargo run'
alias cargotestprint='cargo test -- --nocapture'
